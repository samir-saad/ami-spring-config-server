          "JAVA_OPTIONS": "-XshowSettings:vm -Xms400m -Xmx900m",
          "CPU_REQUEST": "300m",
          "CPU_LIMIT": "3",
          "MEMORY_REQUEST": "512Mi",
          "MEMORY_LIMIT": "1Gi"
